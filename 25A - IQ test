#include <bits/stdc++.h>
using namespace std;

void jai_bajrangbali()
{

    int n,cnt=0,res=0;
    cin>>n;
    int a[n];
    for(int i=1;i<=n;i++)
    {
        cin>>a[i];
        if(a[i]%2==0)
        {
            cnt++;
        }
        else
        {
            res++;
        }
    }

    if(cnt>res)
    {
        for(int i=1;i<=n;i++)
        {
            if(a[i]%2==1)
            {
                cout<<i<<endl;
                return;
            }
        }
    }
   
   else
    {
        for(int i=1;i<=n;i++)
        {
            if(a[i]%2==0)

            {
                cout<<i<<endl;
                return;
            }
        }
    }









}



int main()
{

    jai_bajrangbali();






    return 0;

}
