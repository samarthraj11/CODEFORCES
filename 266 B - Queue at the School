#include <bits/stdc++.h>
using namespace std;

void jai_bajrangbali()
{
}



int main()
{
    int n,t;
    string s;
    cin>>n>>t>>s;
    for(int j=0;j<t;j++)
    {
        for(int i=0;i<n;i++)
        {

            if(s[i]=='B' && s[i+1]=='G')
            {
                char c=s[i];
                s[i]=s[i+1];
                s[i+1]=c;
                i++;


            }

        }

    }

    cout<<s<<endl;

























	return 0;

}
