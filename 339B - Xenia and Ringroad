#include <bits/stdc++.h>
using namespace std;

void jai_bajrangbali()
{

    long long m,n,res;
    cin>>m>>n;
    long long a[n];
    for(long long i=1;i<=n;i++)
    {
        cin>>a[i];

    }
    long long cnt=a[1]-1;

    for(long long i=1,j=i+1;i<=n,j<=n;i++,j++)
    {



        if(a[i]>a[j])
        {
            res=a[i]-a[j];
            cnt=cnt+(m-res);

        }
        else
        {
            res=a[j]-a[i];
            cnt=cnt+res;

        }
    }

    cout<<cnt<<endl;










}



int main()
{

    jai_bajrangbali();






    return 0;

}
