#include <bits/stdc++.h>
using namespace std;
int main()

{
  int n,b;
  cin>>n;
  int a[n];
  for(int i=0;i<n;i++)
  {
      cin>>a[i];
  }
  int maxi=INT_MIN;
  for(int i=0;i<n;i++)
  {
      if(a[i]>maxi)
      {
          maxi=a[i];
          b=i;

      }

  }
  cout<<b+1<<" ";
  sort(a,a+n);
  cout<<a[n-2]<<endl;









    return 0;
}
