#include <bits/stdc++.h>
using namespace std;


int main()
{
    int t;
    cin>>t;
    while(t--)
    {
        string s;
        cin>>s;
        if(s.size()>10)
        {
            int c=s.size()-2;
            char d=s[0];
            char e=s[s.size()-1];

            cout<<d<<c<<e<<endl;


        }
        else
        {
            cout<<s<<endl;
        }



    }












    return 0;
}





