#include <bits/stdc++.h>
#define ll long long
#define pb push_back
#define ld long double
#define sz size()
#define lala for(ll i=0;i<n;i++)
#define ed endl
#define ct cout

using namespace std;


int main()
{

    ll c,d,e,n,m,f,x,y,z,cnt=0,res=0,mx=1;
    ll sum=0;
    bool ash=false;
    string s;
    cin>>n>>m;
    //ll a[n];

    if(n<m)
    {
        ct<<-1<<ed;
        return 0;
    }

    if(n%2==0)
    {
        cnt=n/2;

    }
    else
    {
        cnt=(n/2)+1;
    }


    x=cnt+1;

    while(x)
    {
        if(cnt%m==0)
        {
            ash=1;
            break;
        }
        else
        {
            cnt++;
        }

        x--;
    }

    if(ash)
    {
        ct<<cnt<<ed;
    }
    else
    {
        ct<<-1<<ed;
    }












    return 0;
}

