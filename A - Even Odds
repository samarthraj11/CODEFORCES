void jai_bajrangbali()
{
    ll c,d,e,n,k,x,y,z,cnt=0,res=0,mx=1;
    ll sum=0;
    bool ash=false;
    string s;
    //cin>>n;
    //ll a[n];

    cin>>n>>k;

    if(n%2==0)
    {
        if(k<=n/2)
        {
            ct<<k+k-1<<ed;
        }
        else
        {
            x=n/2;
            ct<<2*(k-x)<<ed;
        }
    }
    else
    {
        if(k<=(n/2)+1)
        {
            ct<<k+k-1<<ed;
        }
        else
        {
            x=(n/2)+1;
            ct<<2*(k-x)<<ed;
        }
    }

}

