void jai_bajrangbali()
{
    ll k,n,m,x,y,cnt=0,res=0,mx=1;
    ll sum=0;
    bool ash=false;
    string s;

    cin>>n;
    ll a[n];
    lala
    {
        cin>>a[i];
        if(a[i]==1)
        {
            cnt++;
        }
    }

    ll ans;
//   5
//   1 0 0 1 0

    for(ll i=0;i<n;i++)
    {
        ans=cnt;

        for(ll j=i;j<n;j++)
        {
            if(a[j]==1)
            {
                ans--;
            }
            else
            {
                ans++;
            }
            res=max(res,ans);


        }

        //ct<<res<<ed;
    }

    ct<<res<<ed;

}

