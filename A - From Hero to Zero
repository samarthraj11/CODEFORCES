void jai_bajrangbali()
{
    ll c,d,e,n,f,x,k,y,z,cnt=0,res=0,mx=1;
    ll sum=0;
    bool ash=false;
    string s;
    cin>>n>>k;
    //ll a[n];
    while(n>0)
    {

        if(n%k==0)
        {
            n=n/k;
            cnt++;
        }
        else
        {

            cnt=cnt+(n%k);
            n=n-(n%k);


        }

    }
    ct<<cnt<<ed;

}

