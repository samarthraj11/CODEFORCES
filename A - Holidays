#include <bits/stdc++.h>
#define ll long long
#define pb push_back
#define ld long double
#define sz size()
#define lala for(ll i=0;i<n;i++)
#define ed endl
#define ct cout

using namespace std;


int main()
{

    ll c,d,e,n,f,x,y,z,cnt=0,res=0,mx=1;
    ll sum=0;
    bool ash=false;
    string s;
    cin>>n;
    //ll a[n];
    if(n%7==0)
    {
        ct<<(n/7)*2<<" "<<(n/7)*2<<ed;
        return 0;
    }


    ll r=n%7;
    c=(n/7)*2;

    //minimum
    if(r>5)
    {
        cnt=1;
    }
    ll mini=c+cnt;

    //maximum

    if(r<2)
    {
        res=1;
    }
    else
    {
        res=2;
    }

    ll maxi=c+res;

    ct<<mini<< " "<<maxi<<ed;





















    return 0;
}

