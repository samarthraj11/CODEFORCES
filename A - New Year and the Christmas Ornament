#include <bits/stdc++.h>


using namespace std;

void khoj()
{
    int y,b,r,sum=0,ans=0;
    cin>>y>>b>>r;
    for(int i=0;i<=y;i++)
    {
        if(i<=b-1 and i<=r-2)
        {
            sum=i+i+i+3;
            ans=max(ans,sum);
        }
    }
    cout<<ans<<endl;


}




int main()
{
    khoj();


















	return 0;

}
