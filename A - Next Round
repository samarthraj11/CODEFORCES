#include <bits/stdc++.h>
using namespace std;


int main()
{
    int n,ans,cnt=0;

    cin>>n>>ans;
    int a[n];

    for(int i=0;i<n;i++)
    {
        cin>>a[i];
    }
    int b=a[ans-1];
    for(int i=0;i<n;i++)
    {
        if(a[i]>=b && a[i]>0)
        {
            cnt++;
        }
    }


    cout<<cnt<<endl;









	return 0;

}
