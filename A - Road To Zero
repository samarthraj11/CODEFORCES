void jai_bajrangbali()
{
    ll c,a,b,d,e,n,f,x,y,z,cnt=0,res=0,mx=1;
    ll sum=0;
    bool ash=false;
    string s;
    //cin>>n;
    //ll a[n];
    cin>>x>>y;
    cin>>a>>b;

    f=max(x,y)-min(x,y);

    z=min(x,y);

    c=(f*a)+(z*b);

    n=(x+y)*a;

    ct<<min(n,c)<<ed;


}

