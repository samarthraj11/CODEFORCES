void jai_bajrangbali()
{
    ll c,d,e,n,k,x,y,z,cnt=0,res=0,mx=1;
    ll sum=0;
    bool ash=false;
    string s;
    //cin>>n;
    //ll a[n];

    cin>>s;
    for(ll i=0;i<s.sz;i++)
    {
        s[i]=tolower(s[i]);
    }
    //ct<<s<<ed;

    vc v;
    string p = "aeiouy";
    for(ll i=0;i<s.sz;i++)
    {
        ash=0;
        for(ll j=0;j<p.sz;j++)
        {
            if(s[i]==p[j])
            {
                ash=1;
            }
        }
        if(!ash)
        {
            v.pb(s[i]);
        }
    }
    for(auto i:v)
    {
        ct<<'.'<<i;
    }





}

int main()
{
    bahut_tezz();
    long long t;
    //cin>>t;
    t=1;
    while(t--)jai_bajrangbali();

    return 0;
}

