#include <bits/stdc++.h>
using namespace std;


int main()
{
    int n;
    cin>>n;
    int a[n];
    int sum=0,cnt=0,bhai=0,j=0,k,l;

    for(int i=0;i<n;i++)
    {
        cin>>a[i];
        sum=sum+a[i];
    }
    int x=sum/2.0;
    sort(a,a+n,greater<>());
    while(bhai<=x)
    {
        bhai=bhai+a[j];
        cnt++;
        j++;

    }
    cout<<cnt<<endl;












    return 0;
}





