void bahut_tezz()
{
    std::ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
}


void jai_bajrangbali()
{
    ll k,n,m,x,y,cnt=0,res=0,mx=1;
    ll sum=0;
    bool ash=false;
    string s;

    cin>>n>>s;
    //ll a[n];
    ll b1=0,r1=0,b2=0,r2=0;

    for(ll i=0;i<n;i++)
    {
        if(i%2==0)
        {
            if(s[i]=='r')
            {
                r1++;
            }
            else
            {
                b1++;
            }

        }

        else
        {
            if(s[i]=='r')
            {
                r2++;
            }
            else
            {
                b2++;
            }
        }
    }

    ct<<min(max(r1,b2),max(r2,b1))<<ed;

}

int main()
{
    bahut_tezz();
    long long t=1;
    //cin>>t;
    while(t--)jai_bajrangbali();

    return 0;
}

