#include <bits/stdc++.h>
#define ll long long
#define pb push_back
#define ld long double
#define sz size()
#define lala for(ll i=0;i<n;i++)
#define ed endl
#define ct cout

using namespace std;


int main()
{

    ll c,d,e,n,f,x,y,z,cnt=0,res=0,mx=1;
    ll sum=0;
    bool ash=false;
    string s;
    ll k;
    cin>>n>>k;
    ll a[n];
    lala
    {
        cin>>a[i];
        cnt=cnt+a[i];
    }

    for(ll i=0;i<n;i++)
    {
        if(a[i]+a[i+1]<k)
        {
            sum=k-(a[i]+a[i+1]);
            a[i+1]=a[i+1]+sum;
        }


    }

    lala
    {
        res=res+a[i];
    }

    ct<<res-cnt<<ed;

    lala
    {
        ct<<a[i]<< " ";
    }




















    return 0;
}

