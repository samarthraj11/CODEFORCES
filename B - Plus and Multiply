void jai_bajrangbali()
{
    ll k,n,m,x,y,cnt=0,res=0,mx=1;
    ll sum=0;
    bool ash=false;
    string s;
    ll a, b;
    cin>>n>>a>>b;
    //ll a[n];

    if(a==1)
    {
        ct<<((n-1)%b == 0 ? "YES" : "NO")<<ed;
        return ;
    }

    while(mx <= n)
    {
        if((n-mx)%b == 0)
        {
            ct<< "YES"<<ed;
            return ;
        }

        mx=mx*a;



    }

    ct<< "NO"<<ed;


}

