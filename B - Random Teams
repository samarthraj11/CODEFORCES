ll saare_jode(ll x)
{
    return (x*(x-1))/2;
}


void jai_bajrangbali()
{
    ll k,n,m,x,y,cnt=0,res=0,mx=1;
    ll sum=0;
    bool ash=false;
    string s;

    cin>>n>>m;
    //ll a[n];

    ll rem=n%m;

    ll add_rem = (n/m)+1;
    ll add_nonrem = (n/m);

    ll mini = (rem*saare_jode(add_rem)) + ((m-rem)*saare_jode(add_nonrem));

    ct<<mini<< " "<<saare_jode(n-m+1)<<ed;



}

int main()
{
    bahut_tezz();
    long long t=1;
    //cin>>t;
    while(t--)jai_bajrangbali();

    return 0;
}

