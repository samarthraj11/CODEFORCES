using namespace std;

void bahut_tezz()
{
    std::ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
}


void jai_bajrangbali()
{
    ll k,n,m,x,y,cnt=0,res=0,mx=1;
    ll sum=0;
    bool ash=false;
    string s;

    cin>>n;
    //ll a[n];
    ll minx = INT_MAX, miny=INT_MAX, maxx=INT_MIN, maxy=INT_MIN;

    for(ll i=0;i<n;i++)
    {
        cin>>x>>y;
        minx=min(minx,x);
        maxx=max(maxx,x);
        miny=min(miny,y);
        maxy=max(maxy,y);
    }

    ll delta_x = maxx-minx;

    ll delta_y = maxy-miny;
//    ct<<pow(4,2)
    unsigned long long int ans = pow(max(delta_y,delta_x),2);
    ct<<ans<<ed;


}

int main()
{
    bahut_tezz();
    long long t=1;
    //cin>>t;
    while(t--)jai_bajrangbali();

    return 0;
}

