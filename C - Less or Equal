    if(a[k-1]==a[k])
    {
        ct<<-1<<ed;
        return ;
    }

    if(n==0 && a[0]==1)
    {
        ct<<-1<<ed;
        return ;
    }

    if(k>=n)
    {
        ct<<a[n-1]<<ed;
        return ;
    }



    if(a[k]-1==0)
    {
        ct<<-1<<ed;
    }
    else
    {
        ct<<a[k]-1<<ed;
    }


}

