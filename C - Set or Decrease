void jai_bajrangbali()
{
    ll k,n,m,x,y,cnt=0,res=0,mx=1;
    ll sum=0;
    bool ash=false;
    string s;

    cin>>n>>k;
    ll a[n];
    foo(i,0,n)
    {
        cin>>a[i];
    }
    sort(a,a+n);
    ll pre[n];
    pre[0] = a[0];

    foo(i,1,n)
    {
        pre[i] = pre[i-1] + a[i];
    }

    ll ans = INT_MAX;
    foo(i,0,n)
    {
        x = k - pre[n-i-1]  + a[0];
        y = x/(i+1);
        if((y*(i + 1)) > x)
        {
            y--;
        }
        y = a[0] - y;
        ans = min(ans,max(0ll,y) + i);
    }
        ct<<ans<<ed;



}

