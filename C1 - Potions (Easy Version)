void jai_bajrangbali()
{
    ll k,n,m,x,y,cnt=0,res=0,mx=1;
    ll sum=0;
    bool ash=false;
    string s;
    priority_queue<ll,vi,greater<ll>> p;
    cin>>n;
    ll a[n];
    foo(i,0,n)
    {
        cin>>a[i];
    }

    for(ll i=0;i<n;i++)
    {
        sum += a[i];
        p.push(a[i]);

        while(sum < 0)
        {
            sum -= p.top();
            p.pop();
        }
    }

    ct<<p.sz<<ed;


}

