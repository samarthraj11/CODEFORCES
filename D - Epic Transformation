    lala
    {
        cin>>a[i];
    }

    map<ll,ll>mp;

    for(ll i=0;i<n;i++)
    {
        mp[a[i]]++;
    }
    ll maxi=INT_MIN;

    for(auto i:mp)
    {
        maxi=max(maxi,i.ss);
    }
    //ct<<maxi<<ed;
    ll bach_gya =n-maxi;

    x=min(bach_gya,n/2);

    ct<<n-2*x<<ed;

}

